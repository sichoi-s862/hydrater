{
  "name": "hydrater",
  "version": "1.0.0",
  "description": "X (Twitter) content automation platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "tsc && cd client && npm run build",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/index.js",
    "db:migrate": "node -r dotenv/config dist/db/migrate.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": ["twitter", "automation", "content", "openai"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "passport": "^0.7.0",
    "passport-twitter": "^1.0.4",
    "express-session": "^1.17.3",
    "openai": "^4.24.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "node-cron": "^3.0.3",
    "twitter-api-v2": "^1.15.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "@types/passport": "^1.0.16",
    "@types/express-session": "^1.17.10",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}
